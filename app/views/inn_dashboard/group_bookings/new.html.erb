<% if inn_owner_signed_in? %>
  <h1>Nova reserva de grupo</h1>
  <%= form_with(model: @group_booking, url: inn_dashboard_inns_group_bookings_path) do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :checkin_date, class: "form-label" %>
      <%= f.date_field :checkin_date, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :checkout_date, class: "form-label" %>
      <%= f.date_field :checkout_date, class: "form-control" %>
    </div>
    <%= f.submit class: 'btn btn-success' %>
  <% end %>
<% else %>
  <h1>Pousadaria</h1>
  <p class="lead mb-3">Entre para gerenciar sua pousada.</p>
  <%= link_to 'Entrar', new_inn_owner_session_path, class: 'btn btn-primary' %>
  <%= link_to 'Criar nova conta', new_inn_owner_registration_path, class: 'btn btn-success' %>
<% end %>